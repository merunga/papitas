Schemas = Schemas or {}
Schemas.Etapa = new SimpleSchema
  nombre:
    type: String
    label: "Título"
    max: 140

  numero:
    type: Number
    label: "Número"
    unique: true
    min: 1
    max: 10

  slug:
    type: String
    label: "Slug"
    max: 140

  titulo:
    type: String
    label: "Título"
    max: 200

  descripcion:
    type: String
    label: "Descripción"

  pregunta: 
    type: new SimpleSchema
      texto:
        type: String
        label: "Texto"
        max: 255

      respuesta: 
        type: new SimpleSchema
          correcta:
            type: String
            label: "Respuesta correcta"
            allowedValues: ['si','no']
          si:
            type: String
            label: "Texto si"
            max: 1000
          no:
            type: String
            label: "Texto no"
            max: 1000

Etapas = new Meteor.Collection "etapas", {connection: null}
Etapas.attachSchema Schemas.Etapa

Meteor.startup ->
  for etapa in etapas
    etapa.slug = "#{('0'+etapa.numero).slice(-2)}-#{_.slugify etapa.nombre}"
    Etapas.insert etapa
